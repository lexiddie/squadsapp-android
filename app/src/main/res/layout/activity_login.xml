<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:onClick="handleKeyboard"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".controller.LoginController">
    <LinearLayout
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:ignore="UselessParent">
        <ImageView
                android:background="@drawable/squadsapp"
                android:layout_marginTop="80dp"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/todo">
        </ImageView>
        <TextView
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:text="@string/login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/noto_sans_bold">
        </TextView>
        <EditText
                android:text="lex"
                android:id="@+id/txtUsername"
                android:hint="@string/username"
                android:textColorHint="@color/colorHint"
                android:background="@drawable/textbox_style"
                android:textColor="@color/colorBlack"
                android:textSize="17sp"
                android:fontFamily="@font/noto_sans"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" tools:ignore="Autofill,TextFields">
        </EditText>
        <EditText
                android:text="123"
                android:id="@+id/txtPassowrd"
                android:hint="@string/password"
                android:textColorHint="@color/colorHint"
                android:background="@drawable/textbox_style"
                android:textColor="@color/colorBlack"
                android:textSize="17sp"
                android:inputType="textPassword"
                android:fontFamily="@font/noto_sans"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" tools:ignore="Autofill,TextFields">
        </EditText>
        <Button
                android:onClick="handleLogin"
                android:text="@string/log_in"
                android:textAllCaps="false"
                android:fontFamily="@font/noto_sans"
                android:textSize="17sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_style_red"
                android:layout_marginTop="25dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
        </Button>
    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:ignore="UselessLeaf">
        <TextView
                android:text="@string/no_account"
                android:fontFamily="@font/noto_sans"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:onClick="handleSignUp"
                android:text="@string/sign_up"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:fontFamily="@font/noto_sans"
                android:textColor="@color/colorDarkRed"
                android:background="@android:color/transparent"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
    </LinearLayout>
</RelativeLayout>