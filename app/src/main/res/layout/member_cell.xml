<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">
            <TextView
                    android:id="@+id/txtMemberNo"
                    android:gravity="center_vertical"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorBlack"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/noto_sans_bold"
                    android:textSize="16sp"
                    android:layout_width="25dp"
                    android:layout_height="30dp"/>
            <ImageView
                    android:id="@+id/imgMember"
                    android:background="@drawable/user"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="33dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp" tools:ignore="ContentDescription"/>
            <LinearLayout
                    android:layout_toEndOf="@id/imgMember"
                    android:layout_toStartOf="@id/layoutCredit"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/txtMemberName"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="17sp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"/>
                <TextView
                        android:id="@+id/txtMemberPhoneNumber"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/noto_sans"
                        android:textSize="17sp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/layoutCredit"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:layout_width="90dp"
                    android:layout_height="match_parent" tools:ignore="UseCompoundDrawables">
                <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="35dp"
                        android:layout_height="match_parent">
                    <ImageView
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/star"
                            android:layout_width="20dp"
                            android:layout_height="20dp" tools:ignore="ContentDescription"/>
                    <ImageView
                            android:layout_marginBottom="15dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/earth"
                            android:layout_width="20dp"
                            android:layout_height="20dp" tools:ignore="ContentDescription"/>
                </RelativeLayout>
                <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:id="@+id/txtMemberRate"
                            android:layout_marginTop="5dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentTop="true"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/noto_sans"
                            android:textSize="16sp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>
                    <TextView
                            android:id="@+id/txtMemberTotalTrip"
                            android:layout_marginBottom="5dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/noto_sans"
                            android:textSize="16sp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>