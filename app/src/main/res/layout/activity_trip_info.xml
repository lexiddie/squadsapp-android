<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".controller.TripInfoController">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            app:popupTheme="@style/AppTheme.PopupOverlay" tools:ignore="UselessParent">
        <Button
                android:onClick="handleDismiss"
                android:background="@drawable/arrow_left"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                tools:ignore="RtlHardcoded" />
        <TextView
                android:text="@string/trip_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/noto_sans_bold"
                android:textColor="@color/colorBlack"
                android:textSize="19sp" tools:ignore="RelativeOverlap"/>
        <ImageView
                android:onClick="handleRequest"
                android:id="@+id/handleRequest"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:visibility="invisible"
                android:layout_marginEnd="55dp"
                android:background="@drawable/request"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp" tools:ignore="ContentDescription"/>
        <Button
                android:onClick="handleCancel"
                android:id="@+id/handleCancel"
                android:visibility="visible"
                android:background="@drawable/cancel"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                tools:ignore="RtlHardcoded" />
        <Button
                android:onClick="handleJoin"
                android:id="@+id/handleJoin"
                android:visibility="invisible"
                android:background="@drawable/join"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                tools:ignore="RtlHardcoded" />
        <Button
                android:onClick="handleLeave"
                android:id="@+id/handleLeave"
                android:background="@drawable/leave"
                android:visibility="invisible"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                tools:ignore="RtlHardcoded" />
        <View
                android:layout_alignParentBottom="true"
                android:background="@color/colorTextBorder"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
    </RelativeLayout>
    <ScrollView
            android:fillViewport="true"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp">
                <LinearLayout
                        android:id="@+id/layout_logo"
                        android:orientation="vertical"
                        android:layout_width="40dp"
                        android:layout_height="match_parent">
                    <ImageView
                            android:background="@drawable/location"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="15dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp" tools:ignore="ContentDescription"/>
                    <ImageView
                            android:background="@drawable/destination"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="15dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp" tools:ignore="ContentDescription"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_toEndOf="@id/layout_logo"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:id="@+id/txtLocation"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="5dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/noto_sans"
                            android:textSize="16sp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"/>
                    <TextView
                            android:id="@+id/txtDestination"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/noto_sans"
                            android:textSize="16sp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        tools:ignore="UseCompoundDrawables">
                    <ImageView
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/member"
                            android:layout_width="30dp"
                            android:layout_height="30dp" tools:ignore="ContentDescription"/>
                    <TextView
                            android:id="@+id/txtMembers"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="10dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/noto_sans"
                            android:textSize="17sp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="23dp">
                <TextView
                        android:id="@+id/txtDate"
                        android:layout_toStartOf="@id/txtTime"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/noto_sans"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="RelativeOverlap"/>
                <TextView
                        android:id="@+id/txtTime"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/noto_sans"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                    android:onClick="handleSharedType"
                    android:layout_width="match_parent"
                    android:layout_height="23dp">
                <ImageView
                        android:id="@+id/imgSharedType"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/txtSharedType"
                        android:layout_width="20dp"
                        android:layout_height="20dp" tools:ignore="ContentDescription"/>
                <TextView
                        android:id="@+id/txtSharedType"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"/>
            </RelativeLayout>
            <View
                    android:layout_marginTop="5dp"
                    android:background="@color/colorTextBorder"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            <TextView
                    android:text="@string/owner"
                    android:textColor="@color/colorBlack"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/noto_sans_bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"/>
            <RelativeLayout
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <ImageView
                        android:id="@+id/imgProfileView"
                        android:background="@drawable/user"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="30dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp" tools:ignore="ContentDescription"/>
                <LinearLayout
                        android:layout_toEndOf="@id/imgProfileView"
                        android:layout_toStartOf="@id/layoutCredit"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:id="@+id/txtName"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="10dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/noto_sans_bold"
                            android:textSize="17sp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"/>
                    <TextView
                            android:id="@+id/txtPhoneNumber"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/noto_sans"
                            android:textSize="17sp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/layoutCredit"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        android:layout_width="90dp"
                        android:layout_height="match_parent" tools:ignore="UseCompoundDrawables">
                    <RelativeLayout
                            android:orientation="vertical"
                            android:layout_width="35dp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_marginTop="15dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/star"
                                android:layout_width="20dp"
                                android:layout_height="20dp" tools:ignore="ContentDescription"/>
                        <ImageView
                                android:layout_marginBottom="15dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/earth"
                                android:layout_width="20dp"
                                android:layout_height="20dp" tools:ignore="ContentDescription"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:id="@+id/txtOwnerRate"
                                android:layout_marginTop="5dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentTop="true"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/noto_sans"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"/>
                        <TextView
                                android:id="@+id/txtOwnerTotalTrip"
                                android:layout_marginBottom="5dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentBottom="true"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/noto_sans"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <View
                    android:background="@color/colorTextBorder"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            <LinearLayout
                    android:onClick="handleAnnouncement"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/announcement"
                        android:textColor="@color/colorBlack"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"/>
                <EditText
                        android:onClick="handleAnnouncement"
                        android:id="@+id/txtAnnouncement"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:focusedByDefault="false"
                        android:hint="@string/click_here_to_setup_announcement"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/noto_sans"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_width="match_parent"
                        android:minHeight="40dp"
                        android:layout_height="wrap_content" tools:ignore="Autofill,TextFields,UnusedAttribute"/>
            </LinearLayout>
            <View
                    android:layout_marginTop="5dp"
                    android:background="@color/colorTextBorder"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">
                <TextView
                        android:text="@string/map"
                        android:textColor="@color/colorBlack"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/noto_sans_bold"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"/>
                <fragment
                        android:id="@+id/handleMapView"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                </fragment>
            </LinearLayout>
            <View
                    android:layout_marginTop="5dp"
                    android:background="@color/colorTextBorder"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            <TextView
                    android:text="@string/members"
                    android:textColor="@color/colorBlack"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/noto_sans_bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"/>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/handleMembersView"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="180dp">
            </android.support.v7.widget.RecyclerView>
            <Button
                    android:id="@+id/handleInitiate"
                    android:onClick="handleInitiate"
                    android:text="@string/initiate"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="17sp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/button_style_red"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
            </Button>
        </LinearLayout>
    </ScrollView>
</LinearLayout>