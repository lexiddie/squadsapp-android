<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:ignore="UselessParent">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp" tools:ignore="DisableBaselineAlignment">
                <LinearLayout
                        android:id="@+id/layout_logo"
                        android:orientation="vertical"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    <ImageView
                            android:background="@drawable/location"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp" tools:ignore="ContentDescription"/>
                    <ImageView
                            android:background="@drawable/destination"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp" tools:ignore="ContentDescription"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_toEndOf="@id/layout_logo"
                        android:layout_toStartOf="@id/layout_no"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    <TextView
                            android:id="@+id/txtLocation"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="5dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/noto_sans"
                            android:textSize="16sp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/txtDestination"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="5dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/noto_sans"
                            android:textSize="16sp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/layout_no"
                        android:layout_alignParentEnd="true"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        tools:ignore="UseCompoundDrawables">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            tools:ignore="UseCompoundDrawables">
                        <ImageView
                                android:background="@drawable/member"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp" tools:ignore="ContentDescription"/>
                        <TextView
                                android:id="@+id/txtAvailable"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="10dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/noto_sans"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <ImageView
                                android:background="@drawable/request"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp" tools:ignore="ContentDescription"/>
                        <TextView
                                android:id="@+id/txtRequesting"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="20dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/noto_sans"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            tools:ignore="UseCompoundDrawables">
                        <TextView
                                android:id="@+id/txtDate"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/noto_sans"
                                android:textSize="15sp"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/txtTime"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="20dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/noto_sans"
                                android:textSize="15sp"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <View
                    android:background="@color/colorTextBorder"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp">
            </View>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>