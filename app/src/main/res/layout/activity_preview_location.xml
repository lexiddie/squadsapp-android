<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        tools:context=".controller.PreviewLocationController">
    <RelativeLayout
            android:id="@+id/pickLocationHeader"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:popupTheme="@style/AppTheme.PopupOverlay">
        <Button
                android:onClick="handleDismiss"
                android:id="@+id/handleDismissLeft"
                android:background="@drawable/arrow_left"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                tools:ignore="RtlHardcoded" />
        <Button
                android:onClick="handleDone"
                android:id="@+id/handleDone"
                android:visibility="invisible"
                android:text="@string/done"
                android:textColor="@color/colorDarkRed"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:fontFamily="@font/noto_sans_bold"
                android:background="@android:color/transparent"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                tools:ignore="RtlHardcoded" />
        <TextView
                android:text="@string/meeting_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/noto_sans_bold"
                android:textColor="@color/colorBlack"
                android:textSize="19sp" tools:ignore="RelativeOverlap"/>
        <Button
                android:onClick="handleFinish"
                android:id="@+id/handleFinish"
                android:visibility="invisible"
                android:text="@string/done"
                android:textColor="@color/colorDarkRed"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:fontFamily="@font/noto_sans_bold"
                android:background="@android:color/transparent"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                tools:ignore="RtlHardcoded" />
        <Button
                android:onClick="handleEdit"
                android:id="@+id/handleEdit"
                android:visibility="invisible"
                android:text="@string/edit"
                android:textColor="@color/colorDarkRed"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:fontFamily="@font/noto_sans_bold"
                android:background="@android:color/transparent"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                tools:ignore="RtlHardcoded" />
        <Button
                android:onClick="handleDismiss"
                android:id="@+id/handleDismissRight"
                android:background="@drawable/arrow_right"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                tools:ignore="RtlHardcoded" />
        <View
                android:layout_alignParentBottom="true"
                android:background="@color/colorTextBorder"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_below="@id/pickLocationHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <fragment
                android:id="@+id/handleMapView"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </fragment>
        <ImageView
                android:id="@+id/handleMapPicker"
                android:background="@drawable/picker"
                android:visibility="invisible"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true" tools:ignore="ContentDescription">
        </ImageView>
    </RelativeLayout>
</RelativeLayout>